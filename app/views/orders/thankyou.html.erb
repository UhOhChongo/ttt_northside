<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active"> Order</li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 ">
      <div class="row userInfo">
        <div class="thanxContent text-center">
          <h1> Thank you for your order #<%= @order.id %></h1>
          <h4>we'll let you know when your items are on their way</h4>
        </div>
        <div class="col-lg-7 col-center" style="float: none;">
          <h4></h4>
          <div class="cartContent table-responsive  w100">
            <table style="width:100%" class="cartTable cartTableBorder">
              <tbody>
              <tr class="CartProduct  cartTableHeader">
                <td colspan="2"> Items to be Shipped</td>
                <td style="width:15%"></td>
              </tr>
              <% @order_items.each do |order_item| %>
                <%= render 'orders/order_item', product: order_item.product, product_color: order_item.product_color, size: order_item.size, order_item: order_item, show_total: true %>
              <% end %>
              <tr>
                <td colspan="2" style="text-align: center; padding: 10px 0;">Total products</td>
                <td class="price" style="width:15%"><%= render 'layouts/cart_subtotal' %></td>
              </tr>
              <tr style="">
                <td colspan="2" style="text-align: center; padding: 10px 0;">Shipping</td>
                <td class="price">
                  <%= number_to_currency(@order.shipping) %>
                  <% #if current_order.subtotal > 100 %>
                    <!--<span class="success">Free shipping!</span>-->
                  <% #else
                    #render :text => number_to_currency(SHIPPING)
                  #end
                  %>
                </td>
              </tr>
              <tr class="cart-total-price ">
                <td colspan="2" style="text-align: center; padding: 10px 0;">Total (tax excl.)</td>
                <td class="price"><%= number_to_currency(@order.pre_tax) %></td>
              </tr>
              <tr>
                <td colspan="2" style="text-align: center; padding: 10px 0;">Total tax</td>
                <td class="price" id="total-tax"><%= number_to_currency(@order.tax) %></td>
              </tr>
              <tr>
                <td colspan="2" style="text-align: center; padding: 10px 0;"> Total</td>
                <td class=" site-color" id="total-price"><%= number_to_currency(@order.total) %></td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/row end-->
    </div>
    <!--/rightSidebar-->
  </div>
  <!--/row-->
  <div style="clear:both"></div>
</div>
<!-- /.main-container -->
<div class="gap"></div>