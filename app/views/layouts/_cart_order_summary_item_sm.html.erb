<tr class="miniCartProduct">
  <td style="width:20%" class="miniCartProductThumb">
    <div><a href="/productdetail/<%= product_color.id.to_s %>"> <%= image_tag("product/" + product.id.to_s + "/" + product.name.downcase.gsub(' ', '-') + "-" + product_color.color.downcase.gsub(' ', '-').gsub('/', '-') + "-300.jpg") %> </a></div>
  </td>
  <td style="width:40%">
    <div class="miniCartDescription">
      <h4><a href="/productdetail/<%= product_color.id.to_s %>"><%= product.name %></a></h4>
      Size: <span class="size"><%= size.size %></span>,
      <span class="size"><%= product_color.color %></span>
      <div class="price"><span><%= number_to_currency order_item.unit_price %></span></div>
    </div>
  </td>
  <td style="width:10%" class="miniCartQuantity"><a> X <%= order_item.quantity.to_i %> </a></td>
  <td style="width:15%" class="miniCartSubtotal"><span><%= number_to_currency order_item.total_price %></span></td>
  <td style="width:5%" class="delete"><a> x </a></td>
</tr>
